<%- include("partials/header.ejs") %>

<div class="container mt-4">

  <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">All Blogs</h2>
        <a href="/blog" class="btn btn-success btn-sm">+ Create Blog</a>
      </div>

      <% if (blogs.length === 0) { %>
        <div class="alert alert-info">
          No blogs available. Start by creating one!
        </div>
      <% } %>

      <% blogs.forEach(blog => { %>
        <div class="card mb-4 shadow-sm">
          <div class="card-body position-relative">

            
        <!-- DELETE and EDIT buttons on same level -->
        <div class="d-flex justify-content-between align-items-start mb-5">
      

            <!-- DELETE → LEFT -->
              <form 
                  method="POST" 
                  action="/blog/<%= blog.id %>?_method=DELETE" 
                  onsubmit="return confirm('Delete this blog?')"
                  class="position-absolute top-0 start-0 mt-2 ms-2">

                  
                  
                  <button type="submit" class="btn btn-outline-danger btn-sm DELETE">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                      fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1z"/>
                    </svg>
                  </button>
              </form>

            <!-- EDIT / DISABLE → RIGHT -->
                <button 
                  type="button" id="editBtn-<%= blog.id %>" 
                  class="btn btn-outline-primary btn-sm position-absolute top-0 end-0 mt-2 me-2"

                  onclick="toggleEdit('<%= blog.id %>')">

                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                      fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                  <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148L4.854 14.854l-4 1 1-4z"/>
                  </svg>
                </button>

          </div>


              
                
            <!-- h4 and p -->
                <h4 id="title-<%= blog.id %>" class="card-title" contenteditable="false">
                  <%= blog.title %>
                </h4>

                <p class="card-text text-muted mb-2">
                  By <strong><%= blog.author %></strong> •
                  <%= new Date(blog.createdAt).toLocaleDateString() %>
                </p>

                <p id="content-<%= blog.id %>" class="card-text" contenteditable="false">
                  <%= blog.content %>
                </p>
                <hr/>
                  


            <!-- Edit / Update form -->
                <form
                  method="POST"
                  action="/blog/<%= blog.id %>?_method=PUT"
                  onsubmit="prepareUpdate('<%= blog.id %>')">
                      

                  <input type="hidden" name="title" id="titleInput-<%= blog.id %>">
                  <input type="hidden" name="content" id="contentInput-<%= blog.id %>">

                  <div class="col-md-12 d-grid justify-content-center align-items-center">
                    <button type="submit" class="btn btn-outline-success btn-sm">Save</button>
                  </div>
                </form>
            </div>
  </div>
  <% }) %>

</div>



<%- include("partials/footer.ejs") %> 